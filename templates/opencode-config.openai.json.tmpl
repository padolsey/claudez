{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "openai": {
      "options": {
        "apiKey": "{env:OPENAI_API_KEY}",
        "baseURL": "https://api.openai.com/v1"
      },
      "models": {
        "gpt-4o": {
          "name": "GPT-4o",
          "id": "gpt-4o"
        },
        "gpt-4o-mini": {
          "name": "GPT-4o Mini",
          "id": "gpt-4o-mini"
        },
        "o1": {
          "name": "o1",
          "id": "o1"
        },
        "o1-mini": {
          "name": "o1 Mini",
          "id": "o1-mini"
        }
      }
    }
  },
  "model": "openai/gpt-4o-mini",
  "agent": {
    "build": {
      "model": "openai/gpt-4o",
      "description": "For complex code modifications"
    },
    "plan": {
      "model": "openai/gpt-4o-mini",
      "description": "For planning and architecture"
    }
  },
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow"
  },
  "share": "disabled"
}
