{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "custom": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "${CUSTOM_PROVIDER_NAME}",
      "options": {
        "apiKey": "{env:CUSTOM_API_KEY}",
        "baseURL": "${CUSTOM_BASE_URL}"
      },
      "models": {
        "default": {
          "name": "Default Model",
          "id": "default"
        }
      }
    }
  },
  "model": "custom/default",
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "webfetch": "allow"
  },
  "share": "disabled"
}
